<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <h1>投稿写真一覧</h1>
    <%= link_to "投稿", new_photo_path %>
      <% @photos.each do |photo| %>
          <p>タイトル:<%= photo.title %></p>
          <p>本文:<%= photo.content %></p>
          <p>写真:<%= image_tag photo.photo %>
          <br>
          <%= profile_img(photo.user) %><p><%= photo.user.name %></p>
          <%= link_to "編集", edit_photo_path(photo.id) %>
          <%= link_to '削除', photo_path(photo.id), data: { confirm: '本当に削除していいですか？' } , method: :delete %>
    <% end %>
  <end>
<end>
