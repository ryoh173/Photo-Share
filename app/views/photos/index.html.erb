<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <h1>投稿写真一覧</h1>
    <%= link_to "投稿", new_photo_path, class: 'btn btn-default btn-lg' %>

      <% @photos.each do |photo| %>
        <div class= "border">
          <h4><strong><%= photo.title %></strong></h4>
          <p><%= photo.content %></p>
          <p><%= image_tag photo.photo %></p>
          <br>
          <%= profile_img(photo.user) %><p><%= photo.user.name %></p>
          <%= link_to "編集", edit_photo_path(photo.id), class: 'btn btn-default btn-sm btn-success' %>
          <%= link_to '削除', photo_path(photo.id), method: :delete, data: { confirm: '本当に削除していいですか？' }, class: 'btn btn-default btn-sm btn btn-danger' %>
        </div>
      <% end %>
  </div>
</div>
